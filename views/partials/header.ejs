                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden pb-4 border-t border-gray-100">
            <nav class="flex flex-col gap-2 pt-4">
                <a href="/" class="<%= currentPage === 'home' ? 'text-primary bg-gray-50' : 'text-gray-600 hover:text-primary hover:bg-gray-50' %> font-semibold transition-colors flex items-center gap-2 px-4 py-2 rounded-lg">
